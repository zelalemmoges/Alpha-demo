<h1 class="text-center mt-4"  > listing All Articles</h1>

<div class="container mb-5"> 


    
    <% @articles.each do |article| %>
        <div class="row justify-content-center mb-4">
            <div class="col-8">
                <div class="card text-center">
                    <div class="card-header">
                        by Zelalem Moges
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"><%= link_to article.title, article_path(article.id), class: "text-success" %></h5>
                        <p class="card-text"><%= truncate(article.description, length: 100) %></p>
                        <%= link_to 'Read', article_path(article.id), class: "btn btn-outline-success" %>
                        <%= link_to 'Edit', edit_article_path(article.id), class: "btn btn-outline-info" %>
                        <%= link_to 'Delete', article_path(article.id), method: :delete, data: { turbo: false, confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
                    </div>

                    <div class="card-footer text-muted">
                        Created <%= time_ago_in_words(article.created_at) %> ago |
                        Last edited <%= time_ago_in_words(article.updated_at) %> ago
                    </div>
                </div>
            </div>
        </div>
    <% end %>

</div>

